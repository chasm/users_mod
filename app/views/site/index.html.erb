<div id="main_region">
  <h1>All users</h1>
  <% unless @users.empty? %>
    <ul class="user_listing">
      <% @users.each do |user| %>
        <li data-user-id="<%= user._id %>">
          <img src="http://placekitten.com/60/60" width="60" height="60" alt="Avatar " />
          <h2><%= user.name %></h2>
          <p><%= user.email %></p>
        </li>
      <% end %>
    </ul>

    <div id="user-modal" class="modal">
      <h3>Hello pedro wake up</h3>
    </div>
  <% else %>
    <p>Add some users, please.</p>
  <% end %>
</div>
